-# frozen_string_literal: true

.workflow-actions
  %a.button.button--secondary{ href: "#{@preferences.as_path( :ppd )}"}
    %i.fa.fa-edit
    change search settings
  -unless defined? no_results
    %a.button.button--secondary{ href: "#{@preferences.as_path( :search )}"}
      %i.fa.fa-mail-reply
      back to results
  - unless defined? no_download
    %a.button.button--secondary{ href: "#{@preferences.as_path( :ppd_data )}"}
      %i.fa.fa-download
      download data
  - unless defined? no_print
    %a.button.button--secondary{ href: "#", alt: "Printable view" }
      %i.fa.fa-print
      printable view
  - unless defined? no_bookmark
    %a.button.button--secondary.js.hidden.action-bookmark{ href: "#", alt: "bookmark this view", data: {url: "#{@preferences.as_path( :search )}" } }
      %i.fa.fa-share-square-o
      share view
  -unless defined? no_help
    %a.js.hidden.button.button--secondary.action.action-help{ href: "#", alt: "Help and tips", title: "Help and tips" }
      %i.fa.fa-question-circle
      help
