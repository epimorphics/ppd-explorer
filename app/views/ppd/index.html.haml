.row
  %h2.col-md-12
    Search the price-paid dataset:
  %p.col-md-12.text-muted
    Enter one or more search terms to locate the property transactions
    you are interested in.

.row
  .col-md-12
    %form.ppd.form-horizontal{ role: "form" }
      .form-group
        %label.col-sm-4.control-label{ for: "paon" } Property name or number
        .col-sm-8
          %input#paon.form-control{ type: "text", name: "paon" }

      .form-group
        %label.col-sm-4.control-label{ for: "street" } Street
        .col-sm-8
          %input#street.form-control{ type: "text", name: "street" }

      .form-group
        %label.col-sm-4.control-label{ for: "town" } Town or city
        .col-sm-8
          %input#town.form-control{ type: "text", name: "town" }

      .form-group
        %label.col-sm-4.control-label{ for: "locality" } Locality
        .col-sm-8
          %input#locality.form-control{ type: "text", name: "locality" }

      .form-group
        %label.col-sm-4.control-label{ for: "street" } District
        .col-sm-8
          %input#district.form-control{ type: "text", name: "district" }

      .form-group
        %label.col-sm-4.control-label{ for: "street" } County
        .col-sm-8
          %input#county.form-control{ type: "text", name: "county" }


      .form-group
        %label.col-sm-4.control-label{ for: "street" } Postcode
        .col-sm-8
          %input#postcode.form-control{ type: "text", name: "postcode" }

      .form-group
        %label.col-sm-4.control-label{ for: "ptype" } Property type
        .col-sm-8
          .checkbox
            %label
              %input{ type: "checkbox", name: "ptype", value: "d" }
              detached
          .checkbox
            %label
              %input{ type: "checkbox", name: "ptype", value: "sd" }
              semi-detached
          .checkbox
            %label
              %input{ type: "checkbox", name: "ptype", value: "t" }
              terraced
          .checkbox
            %label
              %input{ type: "checkbox", name: "ptype", value: "f" }
              flat/maisonette


      .form-group
        %label.col-sm-4.control-label{ for: "nb" } New build?
        .col-sm-8
          .checkbox
            %label
              %input{ type: "checkbox", name: "nb", value: "nb" }
              new-build
          .checkbox
            %label
              %input{ type: "checkbox", name: "nb", value: "n" }
              not new-build

      .form-group
        %label.col-sm-4.control-label{ for: "ten" } Tenure
        .col-sm-8
          .checkbox
            %label
              %input{ type: "checkbox", name: "ten", value: "free" }
              freehold
          .checkbox
            %label
              %input{ type: "checkbox", name: "ten", value: "lease" }
              leasehold

      .form-group
        %label.col-sm-4.control-label{ for: "price" } Price
        .col-sm-8
          %div
            %label
              %input{ type: "number" }
              min
          %div
            %label
              %input{ type: "number" }
              max
