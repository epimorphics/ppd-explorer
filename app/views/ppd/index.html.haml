.row
  %h2.col-md-12
    Search the price-paid dataset:
  %p.col-md-12.text-muted
    Enter one or more search terms to locate the property transactions
    you are interested in.

.row
  .col-md-12
    =form_tag( {controller: :ppd, action: :create}, {role: "form", class: "ppd form form-horizontal"} ) do
      .form-group
        %label.col-sm-4.control-label{ for: "paon" } Property name or number
        .col-sm-8
          %input#paon.form-control{ type: "text", name: "paon" }

      .form-group
        %label.col-sm-4.control-label{ for: "street" } Street
        .col-sm-8
          %input#street.form-control{ type: "text", name: "street" }

      .form-group
        %label.col-sm-4.control-label{ for: "town" } Town or city
        .col-sm-8
          %input#town.form-control{ type: "text", name: "town" }

      .form-group
        %label.col-sm-4.control-label{ for: "locality" } Locality
        .col-sm-8
          %input#locality.form-control{ type: "text", name: "locality" }

      .form-group
        %label.col-sm-4.control-label{ for: "district" } District
        .col-sm-8
          %input#district.form-control{ type: "text", name: "district" }

      .form-group
        %label.col-sm-4.control-label{ for: "county" } County
        .col-sm-8
          %input#county.form-control{ type: "text", name: "county" }


      .form-group
        %label.col-sm-4.control-label{ for: "postcode" } Postcode
        .col-sm-8
          %input#postcode.form-control{ type: "text", name: "postcode" }

      .form-group
        %label.col-sm-4.control-label{ for: "ptype" } Property type
        .col-sm-8
          %ul.list-inline
            %li
              .checkbox
                %label
                  %input{ type: "checkbox", name: "ptype[]", value: "lrcommon:detached", checked: true }
                  detached
            %li
              .checkbox
                %label
                  %input{ type: "checkbox", name: "ptype[]", value: "lrcommon:semi-detached", checked: true }
                  semi-detached
            %li
              .checkbox
                %label
                  %input{ type: "checkbox", name: "ptype[]", value: "lrcommon:terraced", checked: true }
                  terraced
            %li
              .checkbox
                %label
                  %input{ type: "checkbox", name: "ptype[]", value: "lrcommon:flat-maisonette", checked: true }
                  flat/maisonette

      .form-group
        %label.col-sm-4.control-label{ for: "nb" } New build?
        .col-sm-8
          %ul.list-inline
            %li
              .checkbox
                %label
                  %input{ type: "checkbox", name: "nb[]", value: "true", checked: true }
                  new-build
            %li
              .checkbox
                %label
                  %input{ type: "checkbox", name: "nb[]", value: "false", checked: true }
                  not new-build

      .form-group
        %label.col-sm-4.control-label{ for: "ten" } Tenure
        .col-sm-8
          %ul.list-inline
            %li
              .checkbox
                %label
                  %input{ type: "checkbox", name: "ten[]", value: "lrcommon:freehold", checked: true }/
                  freehold
            %li
              .checkbox
                %label
                  %input{ type: "checkbox", name: "ten[]", value: "lrcommon:leasehold", checked: true }/
                  leasehold

      .form-group
        %label.col-sm-4.control-label{ for: "price" } Price
        .col-sm-8
          %ul.list-inline
            %li
              %div
                %label
                  %input{ type: "number", name: :min_price }
                  min
            %li
              %div
                %label
                  %input{ type: "number", name: :max_price }
                  max


      .form-group
        %label.col-sm-4.control-label{ for: "date" } Date
        .col-sm-8
          %ul.list-inline
            %li
              %div
                %label
                  %input{ type: "date", name: :min_date }
                  earliest
            %li
              %div
                %label
                  %input{ type: "date", name: :max_date }
                  latest

      .col-sm-12
        .pull-right
          %button.btn.btn-primary{ type: "submit"}
            show results
